{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "app",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["public/*"],
      "@styles/*": ["public/styles/*"],
      "@views/*": ["public/views/*"],
      "*": [
        "node_modules/*",
        "types/*",
      ]
    }
  },
  "include":[
      "./public/**/*"
  ],
  "exclude":[
    "node_modules",
    "**/*.spec.ts"
  ]
}
